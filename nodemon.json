{
  "watch": ["connect-ws.js"],
  "ext": "js,json",
  "ignore": ["node_modules/**"],
  "restartable": "rs", // Add custom key to restart manually if needed
  "execMap": {
    "js": "node --inspect"  // Optional: Adds debugging mode
